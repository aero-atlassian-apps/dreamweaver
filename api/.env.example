# Supabase (Required)
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Back-compat (Optional)
# Some modules may also accept SUPABASE_SERVICE_KEY as an alias.
SUPABASE_SERVICE_KEY=

# Back-compat (Optional)
# Some server modules accept these as fallbacks (primarily to share local env with the Vite app).
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# AI Services (Required for Intelligence)
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_TTS_API_KEY=your_google_cloud_tts_api_key_here
HUGGINGFACE_API_KEY=
VOICE_CLONING_ENABLED=false
OPENWEATHER_API_KEY=

# Redis (Optional but recommended for scale)
REDIS_URL=
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token_here

# Email (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM="DreamWeaver <noreply@dreamweaver.ai>"

# Server Configuration
PORT=3001
NODE_ENV=development
PUBLIC_APP_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,https://your-production-domain.com

# Security & Feature Flags
CRON_SECRET=super_secure_cron_secret
WS_WORKER_INTERNAL_TOKEN=super_secure_internal_worker_token
USE_MOCK_AI=false
ENABLE_LOAD_TEST_AUTH=false
