# ============================================================
# DreamWeaver Environment Variables
# ============================================================
# Copy this file to .env and fill in your values.
# The API reads from the root .env using --env-file=../.env

# ------------------------------------------------------------
# Supabase (Required)
# ------------------------------------------------------------
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Server-side only (do not prefix with VITE_)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ------------------------------------------------------------
# API Configuration
# ------------------------------------------------------------
# Frontend uses this to call the API. Include /api/v1 prefix.
VITE_API_BASE_URL=http://localhost:3001

# WebSocket base URL (for Gemini Live features)
# Set this if your WebSocket relay is hosted separately from the HTTP API.
VITE_WS_BASE_URL=ws://localhost:3001

# ------------------------------------------------------------
# AI Provider (Required for story generation)
# ------------------------------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here

# Model Configuration (Gemini 3 family)
# See: https://ai.google.dev/gemini-api/docs/models
GEMINI_MODEL_FLASH=gemini-3-flash-preview
GEMINI_MODEL_PRO=gemini-3-pro-preview

# Live API Model (Gemini 3 Live not yet available, use 2.5)
GEMINI_LIVE_MODEL=models/gemini-2.0-flash-exp

# Set to 'true' to use mock AI responses (for development/testing)
USE_MOCK_AI=false

# ------------------------------------------------------------
# Voice Services (Optional)
# ------------------------------------------------------------
# Required for Standard Personas (high quality)
GOOGLE_TTS_API_KEY=your_google_cloud_key
# Required for Voice Cloning (experimental)
HUGGINGFACE_API_KEY=your_hf_token
VOICE_CLONING_ENABLED=false

# ------------------------------------------------------------
# Security (Production)
# ------------------------------------------------------------
# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
WS_WORKER_INTERNAL_TOKEN=super_secure_internal_worker_token

# ------------------------------------------------------------
# Tooling (Optional)
# ------------------------------------------------------------
# Set by CI runners to adjust test configuration
CI=
