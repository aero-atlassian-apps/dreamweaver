{
  "name": "dreamweaver-app",
  "private": true,
  "version": "1.1.1-alpha",
  "type": "module",
  "workspaces": [
    "api"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"npm run dev -w dreamweaver-api\" \"npm run typecheck -- --watch\" -n \"APP,API,TS\" -c \"cyan,magenta,blue\"",
    "build": "npm run typecheck && vite build",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.app.json --noEmit && tsc -p tsconfig.node.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "preview": "vite preview",
    "dev:e2e": "concurrently \"vite --mode e2e\" \"npm run dev -w dreamweaver-api\" -n \"APP,API\" -c \"cyan,magenta\"",
    "test:e2e": "playwright test --workers=1"
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^6.4.0",
    "@google/generative-ai": "^0.24.1",
    "@gradio/client": "^2.0.4",
    "@hono/zod-validator": "^0.7.6",
    "@supabase/supabase-js": "^2.90.1",
    "@tailwindcss/vite": "^4.1.18",
    "framer-motion": "^12.33.0",
    "idb": "^8.0.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0",
    "tailwindcss": "^4.1.18",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.58.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.4",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^26.1.0",
    "typescript": "5.7.2",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^3.2.4",
    "ws": "^8.19.0"
  },
  "overrides": {
    "hono": "4.11.7",
    "lodash": "^4.17.23"
  }
}